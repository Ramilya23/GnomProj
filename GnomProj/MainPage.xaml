<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GnomProj.MainPage" BackgroundImageSource="bg.png">
            

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Регистрация" TextColor="white" FontSize="70" HorizontalOptions="Center">
                
            </Label>
            <Entry x:Name="login" Placeholder="Введите логин" HeightRequest="40" FontSize="17" TextColor="Orange"
            />
            <Entry x:Name="passEnt"               
                IsPassword="True"
                Placeholder="Введите пароль"
                >
                
            </Entry>
            <Entry x:Name="recpassEnt"
                IsPassword="True"
                Placeholder="Повторите пароль" TextChanged="recpassEnt_TextChanged">
                
            </Entry>

            <Label x:Name="passNo" Text="пароли не совпадают" IsVisible="false">
                
            </Label>
            <Button x:Name="regB" Clicked="regB_Clicked" BackgroundColor="White" Text="Зарегистрироваться" TextColor="Black">
                
            </Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
